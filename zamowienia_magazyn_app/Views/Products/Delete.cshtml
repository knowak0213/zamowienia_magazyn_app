@model zamowienia_magazyn_app.Models.Product

@{
    ViewData["Title"] = "Usuń Produkt";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0">Potwierdzenie usunięcia</h5>
                </div>
                <div class="card-body text-center p-5">
                    <h3 class="card-title text-danger mb-4">Czy na pewno chcesz usunąć ten produkt?</h3>
                    <p class="lead mb-4"><strong>@Model.Name</strong></p>
                    
                    <p class="text-muted mb-4">
                        Tej operacji nie można cofnąć.
                    </p>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-center">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Anuluj</a>
                            <button type="submit" class="btn btn-danger px-4">Usuń</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
