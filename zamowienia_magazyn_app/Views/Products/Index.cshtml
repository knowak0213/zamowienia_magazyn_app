@model IEnumerable<zamowienia_magazyn_app.Models.Product>

@{
    ViewData["Title"] = "Produkty";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">Lista Produktów</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Dodaj Nowy Produkt
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-4">@Html.DisplayNameFor(model => model.Name)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Price)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.StockQuantity)</th>
                        <th scope="col" class="text-end pe-4">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                Brak produktów w bazie.
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">
                                @Html.DisplayFor(modelItem => item.Name)
                                <div class="small text-muted fw-normal">@Html.DisplayFor(modelItem => item.Description)</div>
                            </td>
                            <td>
                                @item.Price.ToString("C")
                            </td>
                            <td>
                                <span class="badge @(item.StockQuantity > 5 ? "bg-success" : "bg-warning")">
                                    @Html.DisplayFor(modelItem => item.StockQuantity) st.
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edytuj</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Szczegóły</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Usuń</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
