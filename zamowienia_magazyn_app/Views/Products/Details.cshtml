@model zamowienia_magazyn_app.Models.Product

@{
    ViewData["Title"] = "Szczegóły Produktu";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary">Szczegóły Produktu</h5>
                    <span class="badge bg-secondary">ID: @Model.Id</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3 text-muted">Nazwa</div>
                        <div class="col-sm-9 fw-bold">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 text-muted">Opis</div>
                        <div class="col-sm-9">@Model.Description</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 text-muted">Cena</div>
                        <div class="col-sm-9 text-success fw-bold">@Model.Price.ToString("C")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 text-muted">Ilość w magazynie</div>
                        <div class="col-sm-9">@Model.StockQuantity</div>
                    </div>
                </div>
                <div class="card-footer bg-light d-flex justify-content-end gap-2 text-muted">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edytuj</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Wróć do listy</a>
                </div>
            </div>
        </div>
    </div>
</div>
