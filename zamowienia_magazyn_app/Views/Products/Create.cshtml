@model zamowienia_magazyn_app.Models.Product

@{
    ViewData["Title"] = "Dodaj Produkt";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-white py-3">
                <h4 class="mb-0 text-primary">Nowy Produkt</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Nazwa produktu" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Opis" style="height: 100px"></textarea>
                        <label asp-for="Description"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Price" class="form-control" placeholder="Cena" type="number" step="0.01" />
                                <label asp-for="Price"></label>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="StockQuantity" class="form-control" placeholder="Ilość" />
                                <label asp-for="StockQuantity"></label>
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-light me-md-2">Anuluj</a>
                        <button type="submit" class="btn btn-primary px-4">Zapisz Produkt</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
