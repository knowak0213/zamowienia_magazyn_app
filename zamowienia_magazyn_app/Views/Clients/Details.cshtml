@model zamowienia_magazyn_app.Models.Client

@{
    ViewData["Title"] = "Szczegóły Klienta";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary">Karta Klienta</h5>
                    <span class="badge bg-secondary">ID: @Model.Id</span>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-4">
                        <div class="col">
                            <div class="display-6">@Model.FullName</div>
                            <div class="text-muted">@Model.Email</div>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-sm-3 text-muted">Telefon</div>
                        <div class="col-sm-9">@Model.PhoneNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 text-muted">Adres</div>
                        <div class="col-sm-9">@Model.Address</div>
                    </div>
                </div>
                <div class="card-footer bg-light d-flex justify-content-end gap-2 text-muted">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edytuj</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Wróć do listy</a>
                </div>
            </div>
        </div>
    </div>
</div>
