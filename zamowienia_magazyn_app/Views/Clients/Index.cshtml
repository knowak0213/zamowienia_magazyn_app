@model IEnumerable<zamowienia_magazyn_app.Models.Client>

@{
    ViewData["Title"] = "Klienci";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">Baza Klientów</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Dodaj Klienta
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Imię i Nazwisko</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Adres</th>
                        <th class="text-end pe-4">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">Brak klientów w bazie.</td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td><small class="text-muted">@Html.DisplayFor(modelItem => item.Address)</small></td>
                            <td class="text-end pe-4">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edytuj</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Szczegóły</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Usuń</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
