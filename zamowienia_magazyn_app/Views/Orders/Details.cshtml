@model zamowienia_magazyn_app.Models.Order

@{
    ViewData["Title"] = "Szczegóły Zamówienia";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary">Pozycje Zamówienia</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Produkt</th>
                                <th class="text-center">Ilość</th>
                                <th class="text-end">Cena jedn.</th>
                                <th class="text-end pe-4">Razem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">@item.Product?.Name</div>
                                    </td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                    <td class="text-end pe-4">@item.TotalPrice.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold pt-3">Suma całkowita:</td>
                                <td class="text-end pe-4 fw-bold text-success pt-3">@Model.TotalAmount.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary">Informacje</h5>
                </div>
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small">Klient</h6>
                    <p class="fw-bold mb-1">@Model.Client?.FullName</p>
                    <p class="mb-0">@Model.Client?.Email</p>
                    <p class="mb-3">@Model.Client?.PhoneNumber</p>

                    <h6 class="text-muted text-uppercase small">Status</h6>
                    <p>
                        <span class="badge bg-info">@Model.Status</span>
                    </p>

                    <h6 class="text-muted text-uppercase small">Data Zamówienia</h6>
                    <p class="mb-0">@Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
                </div>
            </div>
            
            <div class="d-grid">
                <a asp-action="Index" class="btn btn-outline-secondary">Wróć do listy</a>
            </div>
        </div>
    </div>
</div>
