@model IEnumerable<zamowienia_magazyn_app.Models.Order>

@{
    ViewData["Title"] = "Zamówienia";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">Zamówienia</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-cart-plus"></i> Nowe Zamówienie
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Data</th>
                        <th>Klient</th>
                        <th>Kwota</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">Brak zamówień.</td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">#@item.Id</td>
                            <td>@item.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <div class="fw-bold">@item.Client?.FullName</div>
                                <div class="small text-muted">@item.Client?.Email</div>
                            </td>
                            <td class="fw-bold">@item.TotalAmount.ToString("C")</td>
                            <td>
                                <span class="badge @(item.Status == zamowienia_magazyn_app.Models.OrderStatus.New ? "bg-info" : "bg-secondary")">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Szczegóły</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
